
@{
    ViewBag.Title = "LichSu";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
    <link href="~/Content/chude.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
          integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        .container {
            padding-top:10px;
            padding-bottom:20px;
            font-family: sans-serif;
            width: 1200px;
            height: auto;
            margin: auto;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.09);
        }

        .theLoais {
            display: grid;
            grid-template-columns: auto auto auto;
            grid-gap: 20px;
            justify-content: space-between;
            padding: 20px;
        }

        .theloai {
            position: relative;
            width: 360px;
            height: 202px;
            box-shadow: 0 9px 15px -4px rgba(0, 0, 0, 0.1), 0 0 0 0 white, 10px 0 15px -4px rgba(0, 0, 0, 0.1), 0 0 0 0 white;
        }

            .theloai img {
                max-width: 140px;
                max-height: 202px;
                display: inline-block;
                margin-top: 6px;
            }

        .theLoais .info {
            word-wrap: break-word;
            text-decoration: none;
            width: 200px;
            float: right;
        }

        .info {
            padding: 10px;
        }

            .info a {
                text-decoration: none;
                color: black;
            }

                .info a:hover {
                    color: rgb(24, 160, 103);
                }

            .info .btn-addCart {
                position: absolute;
                right: 1%;
                bottom: 2%;
                background: green;
                height: 50px;
                line-height: 50px;
                border-radius: 5px;
                width: 120px;
                text-align: center;
            }

                .info .btn-addCart:hover {
                    background: rgb(26, 173, 26);
                }

                .info .btn-addCart a {
                    color: white;
                    display: block;
                }

        ul {
            list-style-type: none;
        }

        li {
            margin-left: 5px;
            display: inline-block;
            list-style-type: none;
        }
          table {
            margin-top:50px;
            margin-left: 5px;
            margin-right: 5px;
            font-family: arial, sans-serif;
            border-collapse: collapse;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
    </head>
<body>
    <div class="container"><h1 style="font-size:1.5em; text-transform:uppercase; margin-top:10px;">Lịch sử mua hàng</h1></div>
    
    <div class="container">
        <form style="width:300px;height:100px;margin-left:73px;margin-top:10px" method="post" action="~/Log/TimKiemHome">
            <label style="font-weight:bold">Mã đơn hàng :</label><br />
            <input type="number" style="outline:none; margin-top:5px; border-radius: 10px;padding:5px;" name="maDH" />
            <br />
            <label style="font-weight:bold">Ngày đặt hàng :</label><br />
            <input type="date" style="outline:none; margin-top:5px; border-radius: 10px;padding:5px;" name="ngaytao" />
            <br />
            <input type="submit" value="Tìm kiếm"
                   style="padding: 5px;
width:100px;
margin-top:5px;
    height: 40px;
                    border-radius: 10px;
                    outline: none;
                    color: #fff;
    font-size: 18px;
                    background: #fb2525;" />
        </form>
        @*}*@


        <br /><br />
        <table style="margin-top: 50px; width:96.6%;margin-left:20px;margin-right:20px">
            <thead>
                <tr>
                    <th>Mã HĐ</th>
                    <th>Tên khách hàng</th>
                    <th>Địa chỉ</th>
                    <th>SĐT</th>
                    <th>Ngày đặt hàng</th>
                    <th>Tổng tiền</th>
                    <th>Thao tác</th>

                </tr>
            </thead>
            <tbody>
                @{
                    BookContext db = new BookContext();
                    var list = Session["LichSu"] as List<WebApplication5.Models.HoaDon>;
                    foreach (var item in list)
                    {
                        <tr>
                            <td>@item.MaDonHang</td>
                            <td>@db.KhachHang.Find(item.MaKH).HoTen</td>
                            <td>@item.DiaChi</td>
                            <td>@item.SDT</td>
                            <td>@item.NgayTao</td>
                            <td>@item.TongTien</td>
                            <td>
                                <a href="~/Log/CTLichSu/@item.MaDonHang">Xem</a>
                              
                            </td>

                        </tr>
                    }
                }


            </tbody>
        </table>@*}*@

        @*<script src="~/scripts/jquery-1.8.0.min.js"></script>*@

        <script src="~/scripts/jquery.validate.min.js"></script>

        <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
    </div>
