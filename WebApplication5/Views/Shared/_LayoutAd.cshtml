<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <style>
        * {
            margin: 0;
            padding: 0;
            font-size: 18px;
            font-family: sans-serif;
        }

        body {
            min-width: 1280px;
            min-height: 720px;
            overflow: hidden;
        }

        .menu {
            width: 200px;
            height: 100vh;
            background: #19666e;
            float: left;
            position: relative;
            z-index: 2;
            overflow: hidden;
        }

            .menu .header {
                width: 100%;
                height: 80px;
                color: antiquewhite;
                text-align: center;
                line-height: 80px;
                border-bottom: 1px solid white;
            }

                .menu .header a {
                    text-decoration: none;
                    color: white;
                    font-weight: bolder;
                }

                    .menu .header a h1 {
                        font-weight: bolder;
                    }

        .menu-list ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

            .menu-list ul li {
                width: 100%;
                height: 50px;
                border-bottom: 1px solid white;
                line-height: 50px;
                padding-left: 10px;
                justify-content: space-between;
            }

                .menu-list ul li img {
                    height: 30px;
                    width: 30px;
                    margin: auto;
                    display: inline-block;
                    vertical-align: middle;
                }

                .menu-list ul li a {
                    color: white;
                    font-weight: bold;
                    text-decoration: none;
                    display: inline-block;
                    height: 100%;
                }

                .menu-list ul li:hover {
                    background: #409b72;
                    text-shadow: 3px 3px rgb(133, 133, 133);
                }



        .status-bar {
            width: calc(100% - 200px);
            width: -moz-calc(100% - 200px);
            width: -webkit-calc(100% - 200px);
            float: left;
            height: 25px;
            min-width: 1000px;
            position: relative;
            background: #e9816f;
            text-align: right;
        }

            .status-bar a {
                color: black;
                text-decoration: none;
                margin-right: 20px;
                display: inline-table;
                height: 100%;
                border-left: 1px solid rgb(77, 77, 77);
                padding-left: 5px;
                font-size: 1em;
                font-weight: lighter;
                text-decoration: none;
            }

                .status-bar a:visited {
                    color: black;
                }

        .content {
            width: calc(100% - 200px);
            height: 96.5vh;
            overflow: scroll;
            float: left;
            z-index: 1;
        }

        .footer {
            position: relative;
            background: #cecece;
            width: calc(100% - 200px);
            width: -moz-calc(100% - 200px);
            width: -webkit-calc(100% - 200px);
            float: left;
            height: 50px;
            text-align: center;
            line-height: 50px;
        }

        .signInOut {
            color: black;
            float: right;
            margin-right: 1%;
            margin-top: 2px;
        }

            .signInOut a {
                color: black;
                font-size: 1em;
                font-weight: lighter;
                text-decoration: none;
            }
    </style>
    <script>
        function resizeToMinimum() {
            var minimum = [1280, 720];
            var current = [window.outerWidth, window.outerHeight];
            var restricted = [];
            var i = 2;

            while (i-- > 0) {
                restricted[i] = minimum[i] > current[i] ? minimum[i] : current[i];
            }

            window.resizeTo(current[0], current[1]);
        }

        window.addEventListener('resize', resizeToMinimum, false)</script>
</head>

<body>
    <div class="menu">
        <div class="header">
            <a href="#">
                <h1>Admin</h1>
            </a>
        </div>
        <div class="menu-list">
            <ul>
                <li>
                    <img src="~/Icons/icons8-home-512.png">
                    <a href="@Url.Action("Index","Home")">Trang Chủ</a>
                </li>
              
                <li>
                    <img src="~/Icons/icons8-book-512.png">
                    <a href="@Url.Action("Index", "Sach")">Sách</a>
                </li>
                <li>
                    <img src="~/Icons/icons8-elective-512.png">
                    <a href="@Url.Action("Index", "ChuDe")">Thể loại</a>
                </li>
                <li>
                    <img src="~/Icons/icons8-hand-with-pen-512.png">
                    <a href="@Url.Action("Index", "TacGia")">Tác Giả</a>
                </li>
                <li>
                    <img src="~/Icons/icons8-customer-512.png">
                    <a href="@Url.Action("AdIndex", "KhachHang")">Khách Hàng</a>
                </li>
                <li>
                    <img src="~/Icons/icons8-organization-512.png">
                    <a href="@Url.Action("Index", "NXB")">Nhà Xuất Bản</a>
                </li>
            
                <li>
                    <img src="~/Icons/icons8-purchase-order-512.png">
                    <a href="@Url.Action("Index", "HoaDon")">Hóa Đơn</a>
                </li>
              
            </ul>
        </div>
    </div>
    <div class="status-bar">
        <div class="signInOut">
            @{
                var kh = Session["KhachHang"] as WebApplication5.Models.KhachHang;
                if (kh == null)
                {
                    <i class="fas fa-sign-in-alt"></i>
                    <a href="@Url.Action("Index", "DangNhap")">Đăng nhập</a>}
                else
                {
                    <i class="fas fa-user-plus"></i>
                    <a href="#">Xin chào @kh.HoTen</a>
                    <i class="fas fa-sign-in-alt"></i>
                    <a href="@Url.Action("DangXuat", "DangNhap")">Đăng xuất</a>
                }
            }

        </div>
        @*<a href="">Đăng Xuất</a>*@
    </div>
    <div class="content">
        @RenderBody()
    </div>
</body>

</html>
