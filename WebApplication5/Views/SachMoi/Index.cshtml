@using WebApplication5.scripts;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="breadcrumb">
    <div class="container">
        <a class="breadcrumb-item" href="~/Home/Index">Trang chủ</a>
        <span class="breadcrumb-item active">Sản phẩm</span>
    </div>
</div>
<section class="static about-sec">
    <div class="container">
        <h2>Sách khuyến khích nên đọc</h2>
        <div class="recomended-sec">
            @{ var listBanChay = Session["ListSachBanChay"] as List<WebApplication5.Models.Sach>;}
            <div class="row">
                @if (listBanChay != null)
                {
                    foreach (var item in listBanChay)
                    {
                        <div class="col-lg-3 col-md-6">
                            <div class="item">
                                <img src="~/UploadedFiles/@item.AnhBia" alt="img" style="height:250px;width:200px">
                                <h3>@StringExtension.opimizeName(item.TenSach, 20)</h3>
                                <h6><span class="price">@item.GiaBan VND</span></h6>
                                <div class="hover">
                                    <a href="~/ChiTietSach/Index/@item.MaSach">
                                        <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
    @{ var Title = Session["Title" as string];
        var list = Session["Products"] as List<WebApplication5.Models.Sach>;}
    <div class="container">
        <h2>
Sách trong cửa hàng của chúng tôi</h2>
        <div class="recent-book-sec">
            <div class="row">
                @if (list != null)
                {
                    foreach (var item in list)
                    {
                        <div class="col-md-3">
                            <div class="item">
                                <img src="~/UploadedFiles/@item.AnhBia" alt="img" style="height:250px;width:200px">
                                <h3><a href="~/ChiTietSach/Index/@item.MaSach">@item.TenSach</a></h3>
                                <h6><span class="price">Giá tiền: @item.GiaBan VND</span></h6>
                                <h6><span class="view">Lượt xem: @item.LuotXem Lần</span></h6>
                            </div>
                        </div>
                    }
                }

                @*<div class="btn-sec">
                        <a href="~/SachMoi/GetListXemNhieu" class="btn gray-btn">load More books</a>
                    </div>*@
            </div>
        </div>
    </div>
</section>